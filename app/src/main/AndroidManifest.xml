<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uncc.contactsdirectory" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateContact"
            android:label="@string/title_activity_create_contact" >
        </activity>
        <activity
            android:name=".EditContact"
            android:label="@string/title_activity_edit_contact" >
        </activity>
        <activity
            android:name=".DisplayContact"
            android:label="@string/title_activity_display_contact" >
        </activity>
        <activity
            android:name=".DeleteContact"
            android:label="@string/title_activity_delete_contact" >
        </activity>
    </application>

</manifest>
